{
  "builders": [{
    "type": "virtualbox-iso",
    "guest_os_type": "Debian",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"],
      ["modifyvm", "{{.Name}}", "--audio", "none"]
    ],
    "disk_size" : 40960,
    "hard_drive_interface": "sata",
    "iso_url": "mini.iso",
    "iso_checksum": "fd29c24c541cf22de9f2fdb2f8f2d44635862db54b3caf0e30ca4172107a80ec",
    "iso_checksum_type": "sha256",
    "http_directory" : "http",
    "ssh_username": "root",
    "ssh_password": "t00r",
    "ssh_wait_timeout": "60m",
    "shutdown_command": "shutdown -P -h now",
    "boot_wait": "5s",
    "boot_command" : [
      "<esc><wait>",
      "auto ",
      "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
      "locale=en_US ",
      "keymap=us <enter>"
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sed -i -r '/^$|^#|deb cdrom/d' /etc/apt/sources.list"]
  }],
  "post-processors": [{
    "type": "vagrant",
    "compression_level": "9",
    "output": "kali-mini-rolling_{{ .Provider }}.box",
    "only": ["virtualbox-iso"]
  }]
}
